<p id="notice"><%= notice %></p>

<h1>Elevators</h1>

<table>
  <thead>
    <tr>
      <th>Needs</th>
      <th>Client</th>
      <th>Product name</th>
      <th>Category</th>
      <th>Value</th>
      <th>Conflict</th>
      <th>Difference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elevators.each do |elevator| %>
      <tr>
        <td><%= elevator.needs %></td>
        <td><%= elevator.client %></td>
        <td><%= elevator.product_name %></td>
        <td><%= elevator.category %></td>
        <td><%= elevator.value %></td>
        <td><%= elevator.conflict %></td>
        <td><%= elevator.difference %></td>
        <td><%= link_to 'Show', elevator %></td>
        <td><%= link_to 'Edit', edit_elevator_path(elevator) %></td>
        <td><%= link_to 'Destroy', elevator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

